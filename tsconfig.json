{
	"compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": false,
		"declaration": false,
		"removeComments": true,
		"sourceMap": false,
		"noEmitOnError": true
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules",
		"**/types"
	]
}